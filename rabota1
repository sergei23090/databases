-- Первое задание
select st.name, st.surname
from students st
where st.score between 4 and 4.5
--
select st.name, st.surname
from students st
where st.score >= 4 and st.score < 4.6
-- Второе задание
select *
from students st
where cast(st.n_group as varchar) like '2%'
-- Третье задание
select *
from students st
order by st.n_group desc, st.name asc
-- Четвертое задание
select *
from students st
where st.score > 4
order by st.score desc
-- Пятое задание
select hb.name, hb.risk
from hobbies hb
where hb.name = 'Футбол' or hb.name = 'Хоккей'
-- Шестое задание
select sh.student_id, sh.hobby_id
from students_hobbies sh
where sh.date_finish is null and sh.date_start > '2015-02-01' and  sh.date_start < '2020-02-28'
-- Седьмое задание
select *
from students st
where st.score > 4.5
order by st.score desc
-- Восьмое задание
select *
from students st
where st.score > 4.5
order by st.score desc
limit 5
--
select *
from students st
where st.score > 4.5
order by st.score
offset 8
-- Девятое задание
select hb.name,
case
when hb.risk <2 then 'очень низкий'
when hb.risk >= 2 and hb.risk <4 then 'низкий'
when hb.risk >= 4 and hb.risk <8 then 'высокий'
when hb.risk >= 8 then 'очень высокий'
end
from hobbies hb
-- Десятое задание
select hb.name
from hobbies hb
order by hb.risk desc
limit 3
-- Групповые функции
--Задание 1
select count(*), st.n_group
from students st
group by st.n_group
--Задание 2
select max(st.score), st.n_group
from students st
group by st.n_group
--Задание 3
select count(*), st.surname
from students st
group by st.surname
-- Задание 5 Только второй курс везде????
select st.n_group, avg(st.score)
from students st
where cast(st.n_group as varchar) like '_%'
group by st.n_group
-- Задание 6
select st.n_group, avg(st.score)
from students st
where cast(st.n_group as varchar) like '2%'
group by st.n_group
order by avg desc
limit 1
-- Задание 7
select st.n_group, avg(st.score)
from students st
group by st.n_group
having avg(st.score) <= 3.5
order by avg(st.score)
-- Задание 8
select st.n_group,count(*),max(st.score), avg(st.score), min(st.score)
from students st
group by st.n_group
-- Задание 9
